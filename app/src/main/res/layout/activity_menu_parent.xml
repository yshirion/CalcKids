<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#6E6C6A"
tools:context="com.example.activities.ParentMenu">

<LinearLayout
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    app:layout_constraintBottom_toTopOf="@+id/idGVcardparent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/parentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:paddingStart="10dp"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/icon_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/idGVcardparent"
    android:layout_width="match_parent"
    android:layout_height="807dp"
    android:layout_marginTop="50dp"
    android:scrollbars="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

</androidx.constraintlayout.widget.ConstraintLayout>
